<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="73dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Verification"
            android:textSize="30dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Line view under the second LinearLayout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000" /> <!-- Adjust background color and height as needed -->



   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Enter the code sent to your email"
       android:textSize="20dp"
       android:textColor="#000000"
       android:textStyle="bold"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Code in 23s"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="#FFA500"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:weightSum="5">

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_bg"
            android:foreground="#00000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_bg"
            android:foreground="#00000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_bg"
            android:foreground="#00000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_bg"
            android:foreground="#00000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_bg"
            android:foreground="#00000000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="3"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="4"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="5"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="6"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="7"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="8"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="9"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:layout_width="44dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0"
            android:layout_margin="5dp"
            android:layout_weight="1.3"
            android:background="@drawable/ic_baseline_circle_24"
            android:textSize="36dp"/>



        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/ic_baseline_backspace_24"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="36dp" />
    </LinearLayout>
</LinearLayout>
